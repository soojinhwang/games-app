<div class="booking-show-container">
  <h1>Booking Confirmation</h1>
  <div class="booking-info-container col-lg-6">
    <div class="booking-info-top">
      <div class="booking-image">
        <% if @booking.game.photo.attached? %>
          <%= cl_image_tag @booking.game.photo.key, height: 300, width: 300, crop: :pad %>
        <% else %>
          <img src="https://images.unsplash.com/photo-1562229125-6d6075419a22?crop=entropy&cs=tinysrgb&fm=jpg&ixlib=rb-1.2.1&q=80&raw_url=true&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1974" style="object-fit: contain;">
        <% end %>
      </div>
      <div class="booking-text">
        <h5 class="booking-text-title"><%= @booking.game.name %></h5>
        <p><strong>Listed by</strong> <%= @booking.game.user.username %></p>
        <p><strong>Pick up location</strong> <%= @booking.game.location %></p>
        <p><strong>Start date</strong> <%= @booking.start_date %></p>
        <p><strong>End date</strong> <%= @booking.end_date %></p>
        <p><strong>Number of days</strong> <%= @number_of_days %> days</p>
        <p><strong>Total price</strong> Â£ <%= number_with_precision((@number_of_days * @booking.game.price_per_day), precision: 2) %></p>
      </div>
    </div>
    <div class="booking-navs-bottom">
      <%= link_to "Back to games", games_path, class: "btn btn-red" %>
      <div class="booking-user-navs">
        <%= link_to "My bookings", bookings_path, class: "booking-buttons-gray" %>
        <%= link_to "Edit booking", edit_booking_path(@booking, @booking.game), class: "booking-buttons-gray" %>
        <%= link_to "Delete booking", booking_path(@booking),
                                      method: :delete,
                                      data: { confirm: "Are you sure you want to delete the booking?" },
                                      class: "booking-buttons-gray" %>
      </div>
    </div>
  </div>
</div>




