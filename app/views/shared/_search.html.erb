<%= form_tag games_path, method: :get do %>
    <div class="search-component mb-4">
      <div class= "input-width">
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find a game"
        %>
      </div>
      <div>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
