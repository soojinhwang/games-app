
<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <%= simple_form_for (@game) do |f|%>
        <%= f.input :name %>
        <%= f.input :category, :collection => ["Video games", "Consoles", "Board games", "Peripherals"] %>
        <%= f.input :location %>
        <%= f.input :price_per_day, placeholder: 'GBP'%>
        <%= f.input :description %>
        <div class="row justify-content-center">
          <%= f.submit class: 'btn btn-danger text-white' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
