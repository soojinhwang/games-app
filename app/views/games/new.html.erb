<div class="container">
  <div class="row justify-content-center" style="margin: 24px;">
  <h1 style = "text-align: center;">List New Game</h1>
    <div class="col-6">
      <%= simple_form_for (@game) do |f|%>
        <%= f.input :name %>
        <%= f.input :category, :collection => ["Video games", "Consoles", "Board games", "Peripherals"] %>
        <%= f.input :location,
                      input_html: { data: { geocoder_target: "location" } },
              wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } }  %>
        <%= f.input :price_per_day, placeholder: 'GBP'%>
        <%= f.input :description %>
        <%= f.input :photo, as: :file %>
        <div class="row justify-content-center">
          <%= f.submit class: 'btn-red' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
