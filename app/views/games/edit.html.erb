<div class="container">
  <div class="row justify-content-center" style="margin: 24px;">
  <h1 style = "text-align: center;"> <%=  @game.name %></h1>
    <div class="col-6">
     <%= simple_form_for(@game) do |f|%>
        <%= f.input :name %>
        <%= f.input :category, :collection => ["Video games", "Consoles", "Board games", "Peripherals"] %>
        <%= f.input :location %>
        <%= f.input :price_per_day %>
        <%= f.input :description %>
        <div class="row justify-content-center">
          <%= f.submit class: 'btn-red' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
