<div class="container">
  <h1 style = "text-align: center;"> All games </h1>
  <% @games.each do |game| %>
    <div class="card-game">
      <div class= "image-card">
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
      </div>
      <div class= "card-text-position">
        <div>
          <h2><%= game.name %></h2>
          <p><%= game.category %></p>
        </div>
        <div>
          <h2><%= game.price_per_day %> Â£/day </h2>
          <% if user_signed_in? && current_user == game.user %>
            <%= link_to "Delete", game_path(game), method: :delete,
            data: { confirm: "Are you sure you want to delete #{game.name}?"} %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>










