<div class="container">

  <h1 style = "text-align: center;"> </h1>

  <%# Put search bar in here by rendering a partial%>
  <div class="d-flex">
  <div class="results-wrap">
  <div class="title-elements col-12 col-lg-7">
    <h1>Available Games</h1>
    <%= link_to "List your game", new_game_path, class: "btn-red" %>
  </div>
  <%= render 'shared/search' %>
  <% @games.each do |game| %>
  <div class="col-12 col-lg-7">
    <%= link_to game_path(game) do %>
      <div class="card-game">
        <% if game.photo.attached? %>
          <%= cl_image_tag game.photo.key, height: 300, width: 300, crop: :thumb %>
        <% else %>
          <img src="https://images.unsplash.com/photo-1562229125-6d6075419a22?ixlib=rb-1.2.1&raw_url=true&q=80&fm=jpg&crop=entropy&cs=tinysrgb&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1974/300x300" />
        <% end %>
        <div class="card-content">
          <div class="card-text">
            <h2><%= game.name %></h2>
            <p><%= game.description %></p>
          </div>
          <div class="card-info">
            <p class="category"><%= game.category %></p>
            <h6 class="card-price">Â£ <%= number_with_precision(game.price_per_day, precision: 2) %> per day </h6>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <% end %>
</div>
  <div id="map"
       style="height: 100vh; width:60%"
       data-controller="mapbox"
       data-mapbox-markers-value="<%= @markers.to_json %>"
       data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  </div>
</div>
